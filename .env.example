# 应用配置
DEBUG=True
ENVIRONMENT=development

# 数据库（可选）
DATABASE_URL=mysql+pymysql://root:password@localhost/morning_news

# Redis（可选）
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=xx
REDIS_DB=1

# 智谱AI（必填）
ZHIPUAI_API_KEY=apikey
ZHIPUAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4
ZHIPUAI_MODEL=glm-4.7

# Celery（可选）
CELERY_BROKER_URL=redis://127.0.0.1:6379/8
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/9

# 爬虫
CRAWLER_TIMEOUT=30
CRAWLER_MAX_ARTICLES=10
CRAWLER_DELAY=1.0

# AI 总结并发数（同时请求AI的数量）
AI_SUMMARY_CONCURRENT=3

# API 密钥（留空则不需要验证，生产环境请设置）
API_KEY=key
